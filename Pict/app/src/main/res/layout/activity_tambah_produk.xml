<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petani.TambahProdukActivity"
    android:orientation="vertical"
    android:background="@color/ijo">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/list_row_end_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Produk"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_white"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_image"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_tambah"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Produk"
                android:textSize="30sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"/>
        </LinearLayout>
        <EditText
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_border_radius_for_edit_text"
            android:hint="  Nama Anda"
            android:inputType="text"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_border_radius_for_edit_text"
            android:hint="  Deskripsi"
            android:inputType="text"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/tv_kategori"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_border_radius_for_edit_text"
            android:hint="  Nama Anda"
            android:inputType="text"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>