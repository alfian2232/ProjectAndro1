<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pembeli.DetailProdukActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/list_row_start_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Detail Produk"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_produk"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/icon_store"
                android:layout_gravity="center"
                android:background="@color/list_row_end_color"/>
            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kubis"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/hrg_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 10,000"
                android:layout_marginHorizontal="15dp"
                android:textSize="24sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"/>
                <TextView
                    android:id="@+id/tv_nama_toko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jaya Karsa"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="15dp"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Produk"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/desk_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Produk"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="7dp"
                android:textSize="20sp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_beli"
        android:text="beli"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_button_ungu"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/list_row_hover_end_color"
        android:layout_marginTop="30dp"/>
</RelativeLayout>