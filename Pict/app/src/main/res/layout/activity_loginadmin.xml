<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="330dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/ic_border_radius"
        android:elevation="7dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="310dp"
            android:orientation="vertical"
            android:paddingTop="40dp">


            --Text Username
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_border_radius_for_edit_text"
                android:drawableLeft="@drawable/ic_username"
                android:hint="  Username"
                android:inputType="textPersonName"
                android:textSize="14dp" />


            --Text Password
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_border_radius_for_edit_text"
                android:drawableLeft="@drawable/ic_password"
                android:hint="  Password"
                android:inputType="numberPassword"
                android:textSize="14dp" />


            --Button Login
            <Button
                android:id="@+id/idButtonLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_border_radius_for_button"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

            --Text Dont have an account
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:elevation="4dp"
                    android:paddingTop="5dp"
                    android:text="Don't have an account?"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/idSignup"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#FF7744"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    --Logo

    --Text Hello
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Hello!"
        android:layout_marginTop="32dp"
        android:elevation="4dp"
        android:textSize="47dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#fff"/>

    --Text welcome back
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Welcome Back"
        android:layout_marginTop="75dp"
        android:elevation="4dp"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textColor="#fff"/>


</RelativeLayout>