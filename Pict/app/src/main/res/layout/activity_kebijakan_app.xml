<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petani.KebijakanAppActivity"
    android:background="@color/ijo"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/list_row_start_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Kebijakan Aplikasi"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SISLOGIN V1"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_med"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="informasi pengguna dijaga kerahasiaannya demi menjaga data privasi pengguna"
        android:textAlignment="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SISLOGIN V1"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_med"
        android:textColor="@color/black"
        android:gravity="bottom|center"/>

</LinearLayout>