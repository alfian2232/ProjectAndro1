<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petani.PengaturanAkunActivity"
    android:orientation="vertical"
    android:background="@color/ijo">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/list_row_start_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Pengaturan Akun"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_profil"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="10dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:layout_weight="0.1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Profil Saya"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_kebijakan"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="10dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_grid"
                    android:layout_weight="0.1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Kebijakan Aplikasi"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_info"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="10dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info"
                    android:layout_weight="0.1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Informasi"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/btn_keluar"
            android:text="keluar"
            android:background="@drawable/bg_button_ungu"
            android:textSize="20sp"
            android:textColor="@color/list_row_hover_end_color"
            android:layout_marginTop="30dp"/>
    </LinearLayout>


</LinearLayout>